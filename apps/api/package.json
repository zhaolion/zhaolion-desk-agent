    "hono": "^4.6.0",
    "ioredis": "^5.4.0",
    "jose": "^6.1.3",
    "pg": "^8.17.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^2.1.9",
    "drizzle-kit": "^0.31.8",
